:root {
  color-scheme: light;
  font-family: "Inter", "Segoe UI", system-ui, -apple-system, sans-serif;
  --bg: #f2f0ed;
  --text: #1a1a1a;
  --muted: #6e6a65;
  --primary: #1f1f1f;
  --primary-dark: #0f0f0f;
  --accent: #d9b88f;
  --card: #ffffff;
  --border: rgba(0, 0, 0, 0.08);
  --transition-speed: 0.3s;
  --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
  --ease-in-out-smooth: cubic-bezier(0.65, 0, 0.35, 1);
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }

  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes slideInFromLeft {
  from {
    opacity: 0;
    transform: translateX(-30px);
  }

  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes shimmer {
  0% {
    background-position: -1000px 0;
  }

  100% {
    background-position: 1000px 0;
  }
}

body {
  background: var(--bg);
  color: var(--text);
  line-height: 1.6;
}

a {
  color: inherit;
  text-decoration: none;
  transition: all var(--transition-speed) var(--ease-out-expo);
}

main {
  display: flex;
  flex-direction: column;
  gap: 80px;
}

.container {
  width: min(1200px, 92vw);
  margin: 0 auto;
}

.site-header {
  position: sticky;
  top: 0;
  z-index: 10;
  background: rgba(242, 240, 237, 0.9);
  backdrop-filter: blur(12px);
  border-bottom: 1px solid rgba(0, 0, 0, 0.08);
}

.nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
  padding: 18px 0;
}

.logo-container {
  display: flex;
  align-items: center;
  gap: 12px;
  text-decoration: none;
  color: inherit;
  transition: transform var(--transition-speed) var(--ease-out-expo);
}

.logo-container:hover {
  transform: scale(1.05);
}

.logo-img {
  border-radius: 50%;
  border: 1px solid var(--border);
  background: #fff;
}

.logo-text {
  font-weight: 700;
  font-size: 1.2rem;
  letter-spacing: 0.08em;
  color: var(--primary);
}

.footer-logo {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 20px;
}

.footer-logo-img {
  border-radius: 50%;
  background: #fff;
  border: 2px solid rgba(255, 255, 255, 0.1);
}

.nav-links {
  display: flex;
  flex-wrap: wrap;
  gap: 18px;
  font-weight: 500;
  color: var(--muted);
}

.nav-links a {
  position: relative;
  padding-bottom: 4px;
}

.nav-links a::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--accent);
  transition: width var(--transition-speed) var(--ease-out-expo);
}

.nav-links a:hover {
  color: var(--primary-dark);
}

.nav-links a:hover::after {
  width: 100%;
}

.hero {
  position: relative;
  min-height: 100vh;
  min-height: 100dvh;
  display: flex;
  align-items: center;
  padding: 80px 0;
  color: #f9f7f5;
  overflow: hidden;
  background: linear-gradient(120deg, rgba(28, 28, 28, 0.9), rgba(65, 62, 58, 0.65)),
    url("/hero-bg.jpg") center/cover no-repeat;
}

.hero-overlay {
  position: absolute;
  inset: 0;
  background: radial-gradient(circle at 20% 20%, rgba(217, 184, 143, 0.25), transparent 45%);
  z-index: 0;
}

.hero-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  position: relative;
  z-index: 1;
}

.hero-card {
  max-width: 800px;
  background: rgba(20, 20, 20, 0.65);
  border-radius: 28px;
  padding: 48px;
  box-shadow: 0 30px 80px rgba(12, 12, 12, 0.35);
  border: 1px solid rgba(255, 255, 255, 0.18);
  backdrop-filter: blur(8px);
  animation: fadeInUp 0.8s var(--ease-out-expo);
}

.hero-title {
  font-size: clamp(2.2rem, 3.2vw, 3.4rem);
  font-weight: 700;
  margin-bottom: 16px;
}

.hero-subtitle {
  color: rgba(249, 247, 245, 0.85);
  font-size: 1.05rem;
  margin-bottom: 24px;
}

.hero-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  justify-content: center;
  margin-bottom: 32px;
}

.button {
  padding: 12px 20px;
  border-radius: 999px;
  border: 1px solid transparent;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  transition: all var(--transition-speed) var(--ease-out-expo);
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

.button::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s var(--ease-out-expo), height 0.6s var(--ease-out-expo);
}

.button:hover::before {
  width: 300px;
  height: 300px;
}

.button:active {
  transform: scale(0.97);
}

.button.primary {
  background: var(--accent);
  color: #1b1b1b;
  box-shadow: 0 12px 30px rgba(217, 184, 143, 0.35);
}

.button.primary:hover {
  background: #caa678;
  transform: translateY(-2px);
  box-shadow: 0 16px 40px rgba(217, 184, 143, 0.45);
}

.button.secondary {
  background: #fff;
  border-color: var(--border);
  color: var(--text);
}

.button.secondary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  border-color: var(--accent);
}

.button.ghost {
  background: transparent;
  border-color: rgba(255, 255, 255, 0.5);
  color: #fff;
}

.button.ghost:hover {
  background: rgba(255, 255, 255, 0.15);
  border-color: rgba(255, 255, 255, 0.8);
  transform: translateY(-2px);
}

.hero-info {
  display: grid;
  gap: 16px;
}

.info-card {
  padding: 18px 20px;
  border-radius: 20px;
  background: rgba(255, 255, 255, 0.92);
  border: 1px solid var(--border);
  display: flex;
  flex-direction: column;
  gap: 6px;
  transition: all var(--transition-speed) var(--ease-out-expo);
}

.info-card:hover {
  background: rgba(255, 255, 255, 1);
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: clamp(1.8rem, 2.8vw, 2.4rem);
  margin-bottom: 20px;
}

.section-subtitle {
  color: var(--muted);
  max-width: 720px;
  margin-bottom: 32px;
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 16px;
}

.benefit-card {
  background: var(--card);
  border-radius: 18px;
  padding: 18px 20px;
  border: 1px solid var(--border);
  font-weight: 600;
  color: var(--primary);
  transition: all var(--transition-speed) var(--ease-out-expo);
  animation: fadeInUp 0.6s var(--ease-out-expo) backwards;
}

.benefit-card:nth-child(1) {
  animation-delay: 0.1s;
}

.benefit-card:nth-child(2) {
  animation-delay: 0.2s;
}

.benefit-card:nth-child(3) {
  animation-delay: 0.3s;
}

.benefit-card:nth-child(4) {
  animation-delay: 0.4s;
}

.benefit-card:nth-child(5) {
  animation-delay: 0.5s;
}

.benefit-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
  border-color: var(--accent);
}

.services-grid,
.doctors-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 20px;
}

.service-card,
.doctor-card,
.about-card {
  background: var(--card);
  border-radius: 24px;
  padding: 24px;
  border: 1px solid var(--border);
  box-shadow: 0 18px 40px rgba(11, 27, 43, 0.08);
  transition: all var(--transition-speed) var(--ease-out-expo);
  animation: scaleIn 0.5s var(--ease-out-expo) backwards;
}

.service-card:hover,
.doctor-card:hover,
.about-card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 24px 60px rgba(11, 27, 43, 0.15);
  border-color: var(--accent);
}

.section-cta {
  margin-top: 24px;
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
}

.doctor-photo {
  width: 100%;
  height: 260px;
  border-radius: 18px;
  margin-bottom: 16px;
  background: linear-gradient(135deg, rgba(217, 184, 143, 0.3), rgba(90, 88, 84, 0.35));
}

.doctor-almira {
  background-image: linear-gradient(120deg, rgba(255, 255, 255, 0.1), rgba(217, 184, 143, 0.5)),
    url("https://images.unsplash.com/photo-1504814532849-927db1448d2c?auto=format&fit=crop&w=600&q=70");
  background-size: cover;
  background-position: center;
}

.doctor-urstem {
  background-image: linear-gradient(120deg, rgba(20, 20, 20, 0.2), rgba(217, 184, 143, 0.4)),
    url("https://images.unsplash.com/photo-1606813909227-919d5c7e3a56?auto=format&fit=crop&w=600&q=70");
  background-size: cover;
  background-position: center;
}

.link {
  display: inline-flex;
  margin-top: 12px;
  font-weight: 600;
  color: var(--primary-dark);
  position: relative;
  transition: all var(--transition-speed) var(--ease-out-expo);
}

.link::after {
  content: 'â†’';
  margin-left: 6px;
  transition: transform var(--transition-speed) var(--ease-out-expo);
}

.link:hover {
  color: var(--accent);
}

.link:hover::after {
  transform: translateX(4px);
}

.reviews-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 20px;
}

.review-card {
  background: #f8f6f3;
  border-radius: 20px;
  padding: 24px;
  border: 1px solid var(--border);
  transition: all var(--transition-speed) var(--ease-out-expo);
  animation: fadeIn 0.6s var(--ease-out-expo) backwards;
}

.review-card:nth-child(1) {
  animation-delay: 0.1s;
}

.review-card:nth-child(2) {
  animation-delay: 0.2s;
}

.review-card:nth-child(3) {
  animation-delay: 0.3s;
}

.review-card:hover {
  transform: translateY(-4px);
  background: #fff;
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
}

.review-meta {
  margin-top: 16px;
  display: flex;
  justify-content: space-between;
  color: var(--muted);
  font-size: 0.9rem;
}

.about-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
}

.location-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 24px;
  align-items: stretch;
}

.map-frame {
  width: 100%;
  height: 320px;
  border-radius: 20px;
  border: 1px solid var(--border);
  overflow: hidden;
  background: #fff;
}

.cta {
  padding: 0;
}

.cta-card {
  background: #1f1f1f;
  color: #f9f7f5;
  border-radius: 24px;
  padding: 32px;
  display: grid;
  gap: 16px;
  box-shadow: 0 24px 60px rgba(0, 0, 0, 0.2);
}

.form-card {
  background: var(--card);
  border-radius: 24px;
  padding: 28px;
  border: 1px solid var(--border);
  box-shadow: 0 20px 60px rgba(11, 27, 43, 0.08);
}

.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 16px;
}

label {
  font-size: 0.9rem;
  font-weight: 600;
  margin-bottom: 6px;
  display: block;
}

input,
textarea,
select {
  width: 100%;
  padding: 12px 14px;
  border-radius: 14px;
  border: 1px solid rgba(15, 30, 23, 0.1);
  background: #fdfefe;
  font-size: 0.95rem;
  transition: all var(--transition-speed) var(--ease-out-expo);
}

input:focus,
textarea:focus,
select:focus {
  outline: none;
  border-color: var(--accent);
  box-shadow: 0 0 0 3px rgba(217, 184, 143, 0.1);
  transform: translateY(-1px);
}

textarea {
  min-height: 120px;
  resize: vertical;
}

.form-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  align-items: center;
}

.badge {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 8px 14px;
  border-radius: 999px;
  background: rgba(217, 184, 143, 0.2);
  color: #f9e7cf;
  font-weight: 600;
  font-size: 0.85rem;
}

.hero-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  gap: 16px;
  margin-top: 32px;
  justify-content: center;
}

.stat-card {
  background: rgba(255, 255, 255, 0.08);
  border: 1px solid rgba(255, 255, 255, 0.15);
  border-radius: 18px;
  padding: 16px;
  text-align: center;
  color: #f8fbf9;
  transition: all var(--transition-speed) var(--ease-out-expo);
  animation: fadeIn 0.6s var(--ease-out-expo) backwards;
}

.stat-card:nth-child(1) {
  animation-delay: 0.2s;
}

.stat-card:nth-child(2) {
  animation-delay: 0.3s;
}

.stat-card:nth-child(3) {
  animation-delay: 0.4s;
}

.stat-card:nth-child(4) {
  animation-delay: 0.5s;
}

.stat-card:hover {
  background: rgba(255, 255, 255, 0.15);
  transform: translateY(-4px);
  border-color: var(--accent);
}

.stat-card strong {
  display: block;
  font-size: 1.1rem;
  color: var(--accent);
}

.footer {
  background: #121212;
  color: #f8fbff;
  padding: 48px 0 32px;
}

.footer-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 24px;
}

.footer a {
  color: #f8fbff;
  opacity: 0.85;
}

.footer small {
  opacity: 0.6;
}

.notice {
  font-size: 0.9rem;
  color: var(--muted);
}

@media (max-width: 720px) {
  .hero {
    padding-top: 48px;
  }

  .hero-actions,
  .section-cta {
    flex-direction: column;
    align-items: stretch;
  }

  .button {
    width: 100%;
  }

  .nav {
    flex-direction: column;
    align-items: flex-start;
  }

  .nav-links {
    gap: 12px;
  }
}